<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">

        <a class="navbar-brand" href="">Hachodromo.WEB</a>
        <!-- 🔸 checkbox que controla el menú -->
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">

    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2" aria-hidden="true"></i>
                Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/reservations">
                <i class="bi bi-calendar-check-fill me-2" aria-hidden="true"></i>
                Reservar
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/counter">
                <i class="bi bi-shop me-2" aria-hidden="true"></i>
                Ver Tienda
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/countries">
                        <i class="bi bi-globe me-2" aria-hidden="true"></i>
                        Paises
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/categories">
                        <i class="bi bi-tags me-2" aria-hidden="true"></i>
                        Categorias
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/items">
                        <i class="bi bi-box-seam me-2" aria-hidden="true"></i>
                        Items
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/memberships">
                        <i class="bi bi-award me-2" aria-hidden="true"></i>
                        Membresias
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/users">
                        <i class="bi bi-people-fill me-2" aria-hidden="true"></i>
                        Usuarios
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/sites">
                        <i class="bi bi-geo-alt me-2" aria-hidden="true"></i>
                        Locales
                    </NavLink>
                </div>

            </Authorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
